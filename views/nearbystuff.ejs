      <script>
         function searchNGO() {
             var input, filter, gridItems, h2, i, txtValue;
             input = document.getElementById("searchInput");
             filter = input.value.toUpperCase().split(" ");
             gridItems = document.getElementsByClassName("grid-item");
             var noResults = document.getElementById("noResults");
             var resultsFound = false;
             
             for (i = 0; i < gridItems.length; i++) {
                 h2 = gridItems[i].getElementsByTagName("h2")[0];
                 txtValue = h2.textContent || h2.innerText;
                 var matchCount = 0;
                 for (var j = 0; j < filter.length; j++) {
                     if (txtValue.toUpperCase().indexOf(filter[j]) > -1) {
                         matchCount++;
                     }
                 }
                 if (matchCount === filter.length) {
                     gridItems[i].style.opacity = "1";
                     gridItems[i].style.order = "-1";
                     resultsFound = true;
                 } else {
                     gridItems[i].style.opacity = "0";
                     gridItems[i].style.order = "0";
                 }
             }
             
             if (!resultsFound) {
                 noResults.style.display = "block";
             } else {
                 noResults.style.display = "none";
             }
         }
         
         function redirectToPage(url) {
             window.location.href = url;
