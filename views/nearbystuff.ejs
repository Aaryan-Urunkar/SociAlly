      <script>
          function randomizeDataAttributes() {
               var gridItems = document.getElementsByClassName("grid-item");
               
               for (var i = 0; i < gridItems.length; i++) {
                  var gridItem = gridItems[i];
                  var randomDate = getRandomDate();
                  var randomLocation = getRandomLocation();
                  var randomTime = getRandomTime();
                  gridItem.setAttribute("data-date", randomDate);
                  gridItem.setAttribute("data-location", randomLocation);
                  gridItem.setAttribute("data-time", randomTime);
               }
            }
            
            function getRandomDate() {
               var startDate = new Date();
               var endDate = new Date();
               endDate.setDate(endDate.getDate() + 30);
               
               var randomTimestamp = startDate.getTime() + Math.random() * (endDate.getTime() - startDate.getTime());
               var randomDate = new Date(randomTimestamp);
               
               return randomDate.toISOString().split("T")[0];
            }
            
            function getRandomLocation() {
                  var locations = ["Mumbai", "Delhi", "Bangalore", "Chennai", "Kolkata", "Hyderabad", "Pune", "Ahmedabad", "Jaipur", "Lucknow"];
               var randomIndex = Math.floor(Math.random() * locations.length);
               
               return locations[randomIndex];
            }
            
            function getRandomTime() {
               var hours = Math.floor(Math.random() * 12) + 1;
               var minutes = Math.floor(Math.random() * 60);
               var ampm = Math.random() < 0.5 ? "A.M." : "P.M.";
               
               return hours.toString().padStart(2, "0") + ":" + minutes.toString().padStart(2, "0") + " " + ampm;
            }
            
